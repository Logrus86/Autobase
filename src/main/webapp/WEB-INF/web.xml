<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <servlet>
        <servlet-name>com.AutobaseGwtApp.AutobaseGwtApp AutobaseGwtService</servlet-name>
        <servlet-class>com.epam.bp.autobase.gwt.server.AuthService</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>com.AutobaseGwtApp.AutobaseGwtApp AutobaseGwtService</servlet-name>
        <url-pattern>/AutobaseGwtApp/AutobaseGwtService</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>

    <error-page>
        <location>/error</location>
    </error-page>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <mime-mapping>
        <extension>ico</extension>
        <mime-type>image/x-icon</mime-type>
    </mime-mapping>
</web-app>
