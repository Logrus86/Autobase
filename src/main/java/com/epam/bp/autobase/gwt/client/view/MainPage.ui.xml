<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
        >

    <g:HTMLPanel ui:field="root">
        <b:Label ui:field="label_loginResult"/>
        <b:Form type="INLINE" ui:field="form_login">
            <b:Fieldset ui:field="fieldSetInvisibleAfterLogin">
                <b:TextBox ui:field="textBox_username" placeholder="Username"/>
                <b:PasswordTextBox ui:field="textBox_password" placeholder="Password"/>
                <b:SubmitButton ui:field="button_login" type="DEFAULT" text="Log-In"/>
                <b:Button ui:field="button_register" type="PRIMARY" text="Register"/>
            </b:Fieldset>
            <b:Fieldset ui:field="fieldSetVisibleAfterLogin">
                <b:ControlLabel visible="false" ui:field="label_welcome" title="label_welcome"
                                styleName="loginControlLabel"/>
                <b:Button name="button_cabinet" icon="USER" iconPosition="RIGHT" type="INFO" ui:field="button_cabinet"
                          visible="false"
                          target="#cabinet" text="Cabinet"/>
                <b:Button name="logout" ui:field="button_logout" type="DANGER" visible="false" text="Log-Out"/>
            </b:Fieldset>
        </b:Form>
    </g:HTMLPanel>

</ui:UiBinder>