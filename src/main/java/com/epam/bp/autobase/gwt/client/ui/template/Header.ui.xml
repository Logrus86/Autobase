<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
             xmlns:b2="urn:import:com.github.gwtbootstrap.datepicker.client.ui"
        >
    <g:HTMLPanel>
        <b:Column size="12" styleName="logo_header">
            <b:Container>
                <b:Image ui:field="logo" styleName="logo" title="Go to main page" altText="logo"
                         url="static/img/logo.jpg"/>
                <b:Form type="INLINE" ui:field="form_login" styleName="loginForms">
                    <b:ControlGroup ui:field="loginInputs">
                        <b:TextBox ui:field="textBox_username" placeholder="Username"/>
                        <b:PasswordTextBox ui:field="textBox_password" placeholder="Password"/>
                        <b:SubmitButton ui:field="button_login" type="INFO" text="Log-In"/>
                        <b:Button ui:field="button_register" type="PRIMARY" text="Register"/>
                    </b:ControlGroup>
                    <b:HelpBlock ui:field="widget_loginResult"/>
                </b:Form>
                <b:Form type="INLINE" ui:field="form_logout" styleName="loginForms">
                    <b:ControlGroup>
                        <g:Label ui:field="label_welcome" styleName="label_welcome"/>
                        <b:Button name="button_cabinet" icon="USER" iconPosition="RIGHT" type="INFO"
                                  ui:field="button_cabinet" text="Cabinet"/>
                        <b:Button name="logout" ui:field="button_logout" type="DANGER" text="Log-Out"/>
                    </b:ControlGroup>
                </b:Form>
            </b:Container>
            <b:Column size="12" styleName="msg-error" ui:field="label_loginResult1"/>
        </b:Column>
        <b:Column size="12" styleName="second_logo">
            <g:Label styleName="count" text="More than 200 namings of vehicles units"/>
            <g:Label styleName="title" text="Transport services at the best prices!"/>
            <g:Label styleName="sub_title" text="Hourly and daily hiring of cars and trucks, and buses"/>
        </b:Column>
        <b:Modal ui:field="modalRegistration" title="Registration" backdrop="NORMAL" keyboard="true" animation="true">
            <b:ControlGroup ui:field="cg_firstname">
                <b:Tooltip text='Must consist of 1 uppercase and up to 19 lowercase letters' trigger="FOCUS"
                           placement="RIGHT">
                    <b:TextBox ui:field="input_firstname" placeholder="Firstname"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_firstname"/>
            </b:ControlGroup>
            <b:ControlGroup ui:field="cg_lastname">
                <b:Tooltip text='Must consist of 1 uppercase and up to 19 lowercase letters' trigger="FOCUS"
                           placement="RIGHT">
                    <b:TextBox ui:field="input_lastname" placeholder="Lastname"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_lastname"/>
            </b:ControlGroup>
            <b:ControlGroup ui:field="cg_dob">
                <b:Tooltip text='Must be between 01.01.1901 and 31.12.1997' trigger="FOCUS" placement="RIGHT">
                    <b2:DateBox ui:field="input_dob" autoClose="true" format="dd.mm.yyyy" placeholder="Date of birth"
                                startDate="01.01.1901" endDate="31.12.1997"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_dob"/>
            </b:ControlGroup>
            <b:ControlGroup ui:field="cg_username">
                <b:Tooltip text='Must consist of 4-20 characters' trigger="FOCUS" placement="RIGHT">
                    <b:TextBox ui:field="input_username" placeholder="Username"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_username"/>
            </b:ControlGroup>
            <b:ControlGroup ui:field="cg_password">
                <b:Tooltip text='Must consist of 4-20 characters and digits' trigger="FOCUS" placement="RIGHT">
                    <b:PasswordTextBox ui:field="input_password" placeholder="Password"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_password"/>
            </b:ControlGroup>
            <b:ControlGroup ui:field="cg_passwordRepeat">
                <b:Tooltip text='Must contain the same password' trigger="FOCUS" placement="RIGHT">
                    <b:PasswordTextBox ui:field="input_passwordRepeat" placeholder="Repeat password"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_passwordRepeat"/>
            </b:ControlGroup>
            <b:ControlGroup ui:field="cg_email">
                <b:Tooltip text='Must be a well-formed email address' trigger="FOCUS" placement="RIGHT">
                    <b:TextBox ui:field="input_email" placeholder="E-mail"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_email"/>
            </b:ControlGroup>
            <b:ModalFooter>
                <b:ControlGroup>
                    <b:Button type="PRIMARY" ui:field="button_modalRegister" text="Register"/>
                    <b:Button text="Cancel" ui:field="button_modalCancel"/>
                </b:ControlGroup>
            </b:ModalFooter>
        </b:Modal>
    </g:HTMLPanel>
</ui:UiBinder>