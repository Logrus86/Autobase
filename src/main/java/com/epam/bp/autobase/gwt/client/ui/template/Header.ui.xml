<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:b2="urn:import:org.gwtbootstrap3.extras.datetimepicker.client.ui"
        >
    <g:HTMLPanel>
        <b:Container styleName="logo_header">
            <b:Image ui:field="logo" styleName="logo" title="Go to main page" altText="logo"
                     url="static/img/logo.jpg"/>
            <b:Form type="INLINE" ui:field="form_login" styleName="loginForms">
                <b:FieldSet>
                    <b:FormGroup ui:field="loginInputs">
                        <b:TextBox ui:field="textBox_username" placeholder="Username"/>
                        <b:Input type="PASSWORD" ui:field="textBox_password" placeholder="Password"/>
                        <b:Button ui:field="button_login" type="INFO" text="Log-In"/>
                        <b:Button ui:field="button_register" type="PRIMARY" text="Register"/>
                        <b:HelpBlock iconType="EXCLAMATION_TRIANGLE" ui:field="widget_loginResult"/>
                    </b:FormGroup>
                </b:FieldSet>
            </b:Form>
            <b:Form type="INLINE" ui:field="form_logout" styleName="loginForms">
                <b:FormGroup>
                    <b:Label ui:field="label_welcome" styleName="label_welcome"/>
                    <b:Button icon="USER" iconPosition="RIGHT" type="INFO"
                              ui:field="button_cabinet" text="Cabinet"/>
                    <b:Button ui:field="button_logout" type="DANGER" text="Log-Out"/>
                </b:FormGroup>
            </b:Form>
        </b:Container>
        <b:Column size="12" styleName="second_logo">
            <g:Label styleName="count" text="More than 200 namings of vehicles units"/>
            <g:Label styleName="title" text="Transport services at the best prices!"/>
            <g:Label styleName="sub_title" text="Hourly and daily hiring of cars and trucks, and buses"/>
        </b:Column>
        <b:Modal ui:field="modalRegistration" title="Registration" dataBackdrop="TRUE" dataKeyboard="true" fade="true">
            <b:FormGroup ui:field="cg_firstname">
                <b:Tooltip title='Must consist of 1 uppercase and up to 19 lowercase letters' trigger="FOCUS"
                           placement="RIGHT">
                    <b:TextBox ui:field="input_firstname" placeholder="Firstname"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_firstname"/>
            </b:FormGroup>
            <b:FormGroup ui:field="cg_lastname">
                <b:Tooltip title='Must consist of 1 uppercase and up to 19 lowercase letters' trigger="FOCUS"
                           placement="RIGHT">
                    <b:TextBox ui:field="input_lastname" placeholder="Lastname"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_lastname"/>
            </b:FormGroup>
            <b:FormGroup ui:field="cg_dob">
                <b:Tooltip title='Must be between 01.01.1901 and 31.12.1997' trigger="FOCUS" placement="RIGHT">
                    <b2:DateTimePicker ui:field="input_dob" autoClose="true" format="dd.mm.yyyy"
                                       placeholder="Date of birth"
                                       startDate="01.01.1901" endDate="31.12.1997"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_dob"/>
            </b:FormGroup>
            <b:FormGroup ui:field="cg_username">
                <b:Tooltip title='Must consist of 4-20 characters' trigger="FOCUS" placement="RIGHT">
                    <b:TextBox ui:field="input_username" placeholder="Username"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_username"/>
            </b:FormGroup>
            <b:FormGroup ui:field="cg_password">
                <b:Tooltip title='Must consist of 4-20 characters and digits' trigger="FOCUS" placement="RIGHT">
                    <b:Input type="PASSWORD" ui:field="input_password" placeholder="Password"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_password"/>
            </b:FormGroup>
            <b:FormGroup ui:field="cg_passwordRepeat">
                <b:Tooltip title='Must contain the same password' trigger="FOCUS" placement="RIGHT">
                    <b:Input type="PASSWORD" ui:field="input_passwordRepeat" placeholder="Repeat password"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_passwordRepeat"/>
            </b:FormGroup>
            <b:FormGroup ui:field="cg_email">
                <b:Tooltip title='Must be a well-formed email address' trigger="FOCUS" placement="RIGHT">
                    <b:Input type="EMAIL" ui:field="input_email" placeholder="E-mail"/>
                </b:Tooltip>
                <b:HelpBlock ui:field="help_email"/>
            </b:FormGroup>
            <b:ModalFooter>
                <b:FormGroup>
                    <b:Button type="PRIMARY" ui:field="button_modalRegister" text="Register"/>
                    <b:Button text="Cancel" ui:field="button_modalCancel"/>
                </b:FormGroup>
            </b:ModalFooter>
        </b:Modal>
    </g:HTMLPanel>
</ui:UiBinder>